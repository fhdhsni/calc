{
  "extends": [
    "plugin:flowtype/recommended",
    "airbnb-base"
  ],
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "mocha": true
  },
  "rules": {
    "quotes": ["error", "double"],
    "newline-after-var": "error",
    "no-bitwise": "error",
    "no-native-reassign": "error",
    "newline-before-return": "error",
    "global-require": "off",
    "func-names": "off",
    "no-console": "off",
    "no-underscore-dangle": "off"
  }
}
